<body> <!-- an overall plugin container panel -->
    <tabs>
        <tab title="Clients">
            <pad> <!-- adds whitespace padding -->
                    <bind:collection bind="users" id="users">
                        <dt bind="__items">
                            <dtr header="True">
                                <dth width="1%" />
                                <dth width="1%" text="{ClientID}" />
                                <dth text="{Username}" />
                                <dth width="10%" text="{Channel}" />
                                <dth width="10%" text="{Actions}" />
                            </dtr>
                        </dt>
                        <bind:template>
                            <dtr>
                                <dtd><icon bind="icon" /></dtd>
                                <dtd><label bind="uid" /></dtd>
                                <dtd><label bind="username" /></dtd>
                                <dtd><label bind="channel" /></dtd>
                                <dtd>
                                    <hc>
                                        <tooltip text="{Information}">
                                            <button id="info" icon="info" style="mini" />
                                        </tooltip>
                                        <tooltip text="{Poke}">
                                            <button id="poke" icon="exclamation" style="mini" />
                                        </tooltip>
                                        <tooltip text="{Kick}">
                                            <button id="kick" icon="bolt" style="mini" />
                                        </tooltip>
                                        <tooltip text="{Ban}">
                                            <button id="ban" icon="remove" style="mini" />
                                        </tooltip>
                                    </hc>
                                </dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
            </pad>
        </tab>
        <tab title="Banned Clients">
            <pad> <!-- adds whitespace padding -->
                    <bind:collection bind="banned_clients" id="banned_clients">
                        <dt bind="__items">
                            <dtr header="True">
                                <dth width="1%" />
                                <dth width="30%" text="{IP Address}" />
                                <dth text="{Username}" />
                                <dth text="{Timestamp}" />
                                <dth width="10%" text="{Actions}" />
                            </dtr>
                        </dt>
                        <bind:template>
                            <dtr>
                                <dtd><icon bind="icon" /></dtd>
                                <dtd><label bind="banned_ip" /></dtd>
                                <dtd><label bind="banned_user" /></dtd>
                                <dtd><label bind="timestamp" /></dtd>
                                <dtd>
                                    <hc>
                                        <tooltip text="{Information}">
                                            <button id="info_client" icon="info" style="mini" />
                                        </tooltip>
                                        <tooltip text="{Unban}">
                                            <button id="unban" icon="exclamation" style="mini" />
                                        </tooltip>
                                    </hc>
                                </dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
            </pad>
        </tab>
        <tab title="Server Information">
            <pad>
                    <bind:collection bind="servers" id="servers">
                        <dt bind="__items">
                            <dtr header="True">
                                <dth width="1%" />
                                <dth width="30%" text="{Hostname}" />
                                <dth text="{Version}" />
                                <dth text="{Max Clients}" />
                                <dth text="{Server Status}" />
                            </dtr>
                        </dt>
                        <bind:template>
                            <dtr>
                                <dtd><icon bind="icon" /></dtd>
                                <dtd><label bind="hostname" /></dtd>
                                <dtd><label bind="version" /></dtd>
                                <dtd><label bind="clientsmax" /></dtd>
                                <dtd><label bind="status" /></dtd>
                            </dtr>
                        </bind:template>
                    </bind:collection>
            </pad>
        </tab>
    </tabs>
</body>